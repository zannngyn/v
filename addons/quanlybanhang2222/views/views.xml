<odoo>
    <data>
        <record model="ir.ui.view"
                id="hang_view_tree">
            <field name="name">hang.view.tree</field>
            <field name="model">hang</field>
            <field name="arch"
                   type="xml">
                <tree string="Danh Sach hang">
                    <field name="tenhang" />
                    <field name="mahang" />
                    <field name="diachi" />
                    <field name="sodt" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view"
                id="hang_view_form">
            <field name="name">hang.view.form</field>
            <field name="model">hang</field>
            <field name="arch"
                   type="xml">
                <form string="Chi Tiet hang">
                    <sheet>
                        <group>
                            <field name="tenhang" />
                            <field name="mahang" />
                            <field name="diachi" />
                            <field name="sodt" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view"
                id="nhanvien_view_tree">
            <field name="name">nhanvien.view.tree</field>
            <field name="model">nhanvien</field>
            <field name="arch"
                   type="xml">
                <tree string="Danh Sach nhanvien">
                    <field name="tennv" />
                    <field name="manv" />
                    <field name="gioitinh" />
                    <field name="sodt" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view"
                id="nhanvien_view_form">
            <field name="name">nhanvien.view.form</field>
            <field name="model">nhanvien</field>
            <field name="arch"
                   type="xml">
                <form string="Chi Tiet nhanvien">
                    <sheet>
                        <group>
                            <field name="tennv" />
                            <field name="manv" />
                            <field name="gioitinh" />
                            <field name="sodt" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view"
                id="sanpham_view_tree">
            <field name="name">sanpham.view.tree</field>
            <field name="model">sanpham</field>
            <field name="arch"
                   type="xml">
                <tree string="Danh Sach sanpham">
                    <field name="tensp" />
                    <field name="masp" />
                    <field name="soluong" />
                    <field name="giaban" />
                    <field name="mausac" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view"
                id="sanpham_view_form">
            <field name="name">sanpham.view.form</field>
            <field name="model">sanpham</field>
            <field name="arch"
                   type="xml">
                <form string="Chi Tiet sanpham">
                    <sheet>
                        <group>
                            <field name="tensp" />
                            <field name="masp" />
                            <field name="soluong" />
                            <field name="giaban" />
                            <field name="mausac" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
         <record model="ir.actions.act_window"
                id="hang_action_window">
            <field name="name">Quan Ly hang</field>
            <field name="res_model">hang</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.actions.act_window"
                id="nhanvien_action_window">
            <field name="name">Quan Ly nhanvien</field>
            <field name="res_model">nhanvien</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.actions.act_window"
                id="sanpham_action_window">
            <field name="name">Quan Ly sanpham</field>
            <field name="res_model">sanpham</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="Quan Ly BanHang"
                  id="main_menu_root"
                  sequence="10" />
        <menuitem name="Quan Ly hang"
                  id="hang_menu_root"
                  action="hang_action_window"
                  sequence="20"
                  parent="main_menu_root" />
        <menuitem name="Quan Ly nhanvien"
                  id="nhanvien_menu_root"
                  action="nhanvien_action_window"
                  sequence="20"
                  parent="main_menu_root" />
        <menuitem name="Quan Ly sanpham"
                  id="sanpham_menu_root"
                  action="sanpham_action_window"
                  sequence="10"
                  parent="main_menu_root" />
    </data>
</odoo>